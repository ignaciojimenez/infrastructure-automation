version: '3.8'

services:
  homeassistant:
    container_name: homeassistant
    image: "ghcr.io/home-assistant/home-assistant:{{ homeassistant_version | default('stable') }}"
    volumes:
      - ./config:/config
      - /etc/localtime:/etc/localtime:ro
    restart: unless-stopped
    privileged: true
    network_mode: host
    environment:
      - TZ={{ timezone | default('UTC') }}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8123"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s
    depends_on:
      - matter-server
{% if enable_cloudflare_tunnel | default(true) %}

  cloudflared:
    container_name: cloudflared
    image: cloudflare/cloudflared:latest
    restart: unless-stopped
    network_mode: host
    command: tunnel --no-autoupdate run --token {{ vault_cloudflare_tunnel_token }}

{% endif %}
{% if enable_matter_server | default(true) %}

  matter-server:
    container_name: matter-server
    image: "ghcr.io/home-assistant-libs/python-matter-server:{{ matter_server_version | default('stable') }}"
    restart: unless-stopped
    network_mode: host
    security_opt:
      - apparmor=unconfined
    volumes:
      - {{ matter_server_data_dir | default('/home/' + ansible_user + '/matter-server') }}:/data
      - /run/dbus:/run/dbus:ro
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5580"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 15s
{% endif %}
