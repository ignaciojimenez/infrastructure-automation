PIHOLE_INTERFACE={{ pihole_interface | default('eth0') }}
IPV4_ADDRESS={{ pihole_ip | default('192.168.1.100/24') }}
IPV6_ADDRESS=
PIHOLE_DNS_1={{ pihole_dns_1 | default('9.9.9.9') }}
